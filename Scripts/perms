#!/usr/bin/env zsh

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script changes the permissions on all files and
# directories under the specified path (including the root directory). The
# permissions used are 700 for directories and 600 for files. It also removes
# all of the extra permission attributes under OS X.

# Usage: perms <path>

if [[ ! $# -eq 1 ]]; then
  echo "Usage: $0:t [PATH]..."
  exit
fi

if [[ ! -d $1 ]]; then
  echo "Directory '$1' does not exist!"
  return 1
fi

echo "Changing permissions recursively on directory '$1'."

if [[ $OSTYPE == darwin* ]]; then
  find $1 -type d -exec chmod -N "{}" \; -exec chmod 700 "{}" \;
  find $1 -type f -exec chmod -N "{}" \; -exec chmod 600 "{}" \;
else
  find $1 -type d -exec chmod 700 "{}" \;
  find $1 -type f -exec chmod 600 "{}" \;
fi
