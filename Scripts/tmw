#!/usr/bin/env zsh

# Description: This script sets up tmux work session.

# Usage: tmw

# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

session=work

if ! tmux attach -t $session &> /dev/null; then
  # \; is used to chain tmux commands.
  tmux new-session -s $session \; \
    new-window -d \; \
    split-window -h \; \
    send-keys -t 0 "vim" enter \; \
    send-keys -t 1 "cd ~/Downloads" enter \; \
    send-keys -t 1 C-l \; \
    send-keys -t 1 "d" enter
fi
