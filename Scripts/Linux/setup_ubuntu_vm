#!/bin/bash

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script configures specific things for my virtual machines.

# Usage: setup_ubuntu_tv

sudo apt-get install \
  apache2 \
  bind9 \
  cdpr \
  dia \
  gparted \
  hping3 \
  mdadm \
  nagios3 \
  ncftp \
  netperf \
  nfs-kernel-server \
  nginx \
  php5 \
  samba4 \
  tcl \
  tftp \
  tftpd \
  tshark \
  wireshark

sudo dpkg-reconfigure wireshark-common
sudo usermod -a -G wireshark $USER

sudo rm \
  /etc/rc*.d/*apache2 \
  /etc/rc*.d/*bind9 \
  /etc/rc*.d/*nagios3 \
  /etc/rc*.d/*netperf \
  /etc/rc*.d/*nfs-kernel-server \
  /etc/rc*.d/*nginx \
  /etc/rc*.d/*postfix
