rm ~/examples.desktop

sudo apt install \
  curl \
  flac \
  git \
  golang \
  links \
  nmap \
  openssh-server \
  tmux \
  tree \
  vim-nox \
  weechat \
  zsh

sudo chsh -s /bin/zsh $USER

mkdir ~/Projects
git clone https://github.com/ggustafsson/Dot-Files.git ~/Projects/Dot\ Files

sudo cp ~/Projects/Dot\ Files/motd /etc/motd
~/Projects/Dot\ Files/Scripts/setup-dotfiles
