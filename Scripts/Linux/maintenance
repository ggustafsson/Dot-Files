#!/usr/bin/env zsh

# Description: This script executes a bunch of commands i run frequently to
# keep things up-to-date etc.
#
# Usage: maintenance
#
# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

sudo apt update
echo
sudo apt full-upgrade
echo
sudo apt-get autoremove

for directory in ~/Projects/*; do
  if [[ -d $directory ]]; then
    print -P "\n%B%F{cyan}Updating repo: ${directory}%f%b"
    git -C $directory pull
  fi
done

echo
dl_go
echo
dl_vim
