sudo apt update
echo
sudo apt full-upgrade
echo
sudo apt-get autoremove
echo
dl_go
echo
dl_vim

for directory in ~/Projects/*; do
  if [[ -d $directory ]]; then
    print -P "\n%B%F{cyan}Running git pull on: ${directory:t}%f%b"
    cd $directory
    git pull
  fi
done
