#!/usr/bin/env zsh

# Description: This script downloads/updates Vim plugins.
#
# Usage: fetch-vim
#
# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

function fetch {
  dir=$1
  url=$2

  print -P "\n%B%F{cyan}Fetching plugin: ${dir:t}%f%b"
  if [[ -d $dir ]]; then
    git -C $dir pull
  else
    git clone $url $dir
  fi
}

echo "Fetching Vim plugins."

mkdir -p ~/.vim/pack/others

fetch ~/.vim/pack/others/gundo.vim    https://github.com/sjl/gundo.vim.git
fetch ~/.vim/pack/others/nerdtree     https://github.com/scrooloose/nerdtree.git
fetch ~/.vim/pack/others/syntastic    https://github.com/scrooloose/syntastic.git
fetch ~/.vim/pack/others/tcomment_vim https://github.com/tomtom/tcomment_vim.git
fetch ~/.vim/pack/others/vim-surround https://github.com/tpope/vim-surround.git
