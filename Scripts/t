#!/usr/bin/env zsh

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script prints out the content of my $todo_file file or
# adds a new entry to the bottom of the file. The variable todo_file is set
# from ~/.zshrc with "export todo_file=path".

# Usage: t
#        t <text>

if [[ -z $todo_file ]]; then
  echo "Variable 'todo_file' is not set! Exiting..."
  exit 1
fi

if [[ $# -gt 0 ]]; then
  echo "Adding new entry to to-do list."
  echo $* >>| $todo_file
else
  if [[ ! -f $todo_file ]]; then
    echo "File '$todo_file' does not exist! Exiting..."
    exit 1
  fi

  cat $todo_file
fi
