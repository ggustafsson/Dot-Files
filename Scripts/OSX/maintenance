#!/usr/bin/env zsh

# Description: This script executes a bunch of commands i run frequently to
# back things up and keep things up-to-date.
#
# Usage: maintenance
#
# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

echo -n "Everything plugged in and ready to go? [y/n] "
read answer

if [[ $answer == (y|yes) ]]; then
  echo
  brew update
  echo
  brew upgrade --all
  echo
  brew cleanup
  echo
  fetch_go
  echo
  fetch_vim
  echo
  frees
  echo
  backup
else
  echo "Bye bye!"
fi
