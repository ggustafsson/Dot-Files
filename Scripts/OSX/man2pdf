#!/usr/bin/env zsh

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script converts man pages to PDF files with Preview.app.

# Usage: man2pdf <man>
#        man2pdf <man> <man> ...

if [[ $# -gt 0 ]]; then
  for ARGUMENT in $*; do
    man -t $ARGUMENT | open -f -a Preview
  done
else
  echo "Usage: $0:t [MAN PAGE(S)]..."
fi
