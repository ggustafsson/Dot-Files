  gnu-sed \
  hping \
  html2text \
  imagemagick --without-x \
  imagesnap \
  irssi \
  kismet \
  lame \
  links \
  macvim \
  ncftp \
  netperf \
  nginx \
  nmap \
  offline-imap \
  openssh \
  php55 \
  python \
  python3 \
  rsync \
  ruby \
  svtplay-dl \
  tmux \
  tree \
  vim \
  vorbis-tools \
  wget \
  wireshark \
  youtube-dl \
  zsh
