startup_message off

escape C-q

set barpadding 5 1
set border 1
set bwcolor #444444
set font terminus:pixelsize=22:style=bold
set fwcolor #444444
set inputwidth 500
set padding 0 1 0 0
set winfmt %n %t 
set wingravity n
set winname class

definekey top F7  exec mpc prev
definekey top F8  exec mpc toggle
definekey top F9  exec mpc next
definekey top F10 exec amixer sset Master toggle
definekey top F11 exec amixer sset Master 3- unmute
definekey top F12 exec amixer sset Master 3+ unmute

definekey top M-F1 rpws1
definekey top M-F2 rpws2

unbind C-Up
unbind C-Down
unbind C-Left
unbind C-Right

bind C-C-Up    exchangeup
bind C-C-Down  exchangedown
bind C-C-Left  exchangeleft
bind C-C-Right exchangeright

unbind Q
bind o only

unbind R
bind c remove

unbind S
bind v hsplit

bind b exec ratpoison -c "echo $(acpi)"
bind d time
bind e exec menu
bind f exec firefox
bind x exec urxvt

exec xsetroot -solid black -cursor_name left_ptr
exec rpws init 2 -a

