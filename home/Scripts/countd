#!/usr/bin/env ruby

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script reads the file ~/.countdowns and calculates the
# remaining days until the specific date on each entry in the file.
#
# An entry in the file looks like this:
#
# "Title here", 2017, 01, 14

# Usage: countd

require "csv"

file = "#{Dir.home}/.countdowns"
today = Date.today
pos = 0

if !File.exists?(file)
  abort "File not found!"
elsif CSV.read(file).length == 0
  abort "No entries found!"
end

CSV.foreach(file) do |row|
  if row.size != 2
    puts if pos > 0
    puts "The row on line #{pos + 1} is not 2 columns. Skipping!"
    pos += 1

    next
  end

  title = row[0]
  date = row[1].strip!

  begin
    future = Date.parse(date)
  rescue
    next
  end

  days_left = (future - today).to_i

  if days_left == -1 or days_left == 1
    day_or_days = "day"
  else
    day_or_days = "days"
  end

  puts if pos > 0
  puts title
  puts "#{days_left} #{day_or_days} left until #{date}"

  pos += 1
end
