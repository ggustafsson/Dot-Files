#!/usr/bin/env zsh

# Written by GÃ¶ran Gustafsson <gustafsson.g@gmail.com>.

# Description: This script turns off Wi-Fi if the time is between 02:00-16:00.
# F to you procrastination. I run this script automatically every 5 minutes.

# Usage: antipro

DAY=$(date "+%a")
TIME=$(date "+%H%M")

if [[ $DAY != (Sat|Sun) && $TIME == <0200-1600> ]]; then
  networksetup -setairportpower en0 off
else
  [ ! -f ~/.nowifi ] && networksetup -setairportpower en0 on
fi
